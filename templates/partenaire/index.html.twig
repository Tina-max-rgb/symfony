{% extends 'base.html.twig' %}

{% block title %}Orange Blue - Partenaire{% endblock %}
{% block body %}
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-10">
      <h2>Mes structures</h2>
      <table class="table align-middle mb-0 bg-white">
      <thead class="bg-light">
        <tr>
          <th>Nom</th>
          <th>Email</th>
          <th>Adresse</th>
          <th>Status</th>
          <th>Permissions</th>
        </tr>
      </thead>
      <tbody>
      {% if partner is not empty %}
        {% for structure in partner.structure %}
          <tr>
            <td>
              <div class="d-flex align-items-center">              
                <div class="ms-3">
                  <p class="fw-bold mb-1">{{structure.user.nom}}</p>
                </div>
              </div>
            </td>
            <td>
              <p class="text-muted mb-0">{{structure.user.email}}</p>
            </td>
            <td>
              <p class="text-muted mb-0">{{structure.user.adresse}}</p>
            </td>
            <td>
              {% if structure.user.isActive %}
                <span class="badge badge-active rounded-pill d-inline">Active</span>
              {% else %}
                <span class="badge badge-disable rounded-pill d-inline">DÃ©sactiver</span>
              {% endif %}
            </td>
            <td>
              <a href="{{ path('partenaire_show_structure_permissions', {'id': structure.id}) }}" class="btn btn-link btn-sm btn-rounded edit-btn">
                Consulter
              </a>
            </td>
          </tr>
          {% endfor %}
          {% else %}
          <tr>
            <td colspan="4"><p class="text-center">Pas de liste des structures</td>
          </tr>
          {% endif %}
      </tbody>
    </table>
    </div>
  </div>
</div>
{% endblock %}
