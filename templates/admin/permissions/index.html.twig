{% extends 'base.html.twig' %}

{% block title %}Administrateur Orange Blue - Permissions{% endblock %}
{% block body %}
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-10">
      <h2>Liste des Permissions</h2>
      <div class="p-3 d-flex justify-content-end"><a href="{{ path('admin_add_permission') }}" class="btn btn-primary btn-sm">Ajout Permissions</a></div>
      <table class="table align-middle mb-0 bg-white">
      <thead class="bg-light">
        <tr>
          <th>Nom</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      {% if permissions is not empty %}
        {% for permission in permissions %}
          <tr>
            <td>
              <div class="d-flex align-items-center">              
                <div class="ms-3">
                  <p class="fw-bold mb-1">{{permission.nom}}</p>
                </div>
              </div>
            </td>
            <td>
              <a href="{{ path('admin_edit_permission', {'id': permission.id}) }}" class="btn btn-link btn-sm btn-rounded edit-btn">
                Edit
              </a>
            </td>
          </tr>
          {% endfor %}
          {% else %}
          <tr>
            <td colspan="2"><p class="text-center">Pas de liste des permissions</td>
          </tr>
          {% endif %}
      </tbody>
    </table>
    </div>
  </div>
</div>
{% endblock %}
